{
  "name": "@steipete/macos-automator-mcp",
  "version": "0.4.1",
  "description": "MCP Server to execute AppleScript and JXA on macOS.",
  "type": "module",
  "main": "dist/server.js",
  "bin": {
    "macos-automator-mcp": "dist/server.js"
  },
  "files": [
    "dist/**/*",
    "knowledge_base/**/*",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/server.ts",
    "start": "node dist/server.js",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write \"src/**/*.ts\" \"*.md\"",
    "validate": "tsx scripts/validate-kb.ts",
    "test": "vitest run"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/steipete/macos-automator-mcp.git"
  },
  "keywords": [
    "mcp",
    "applescript",
    "jxa",
    "macos",
    "automation"
  ],
  "author": "steipete",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/steipete/macos-automator-mcp/issues"
  },
  "homepage": "https://github.com/steipete/macos-automator-mcp#readme",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.25.1",
    "fuse.js": "^7.1.0",
    "gray-matter": "^4.0.3",
    "zod": "^4.2.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/node": "^25.0.3",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "prettier": "^3.7.4",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.50.1",
    "vitest": "^4.0.16"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "packageManager": "pnpm@9.12.1"
}
